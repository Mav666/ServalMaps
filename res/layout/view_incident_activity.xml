<?xml version="1.0" encoding="utf-8"?>
    
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@color/black">
       <!-- header -->		
    			
    <ImageView android:id="@+id/logot_image"
   			   style="@style/slogo"/> 

    <TextView android:id="@+id/header"
              android:text="@string/header"
              style="@style/sheader" /> 

    <TextView android:id="@+id/url"
    		  android:text="@string/url"	  
              android:layout_below="@+id/header" 
              style="@style/surl"/> 
   
     <!-- Content -->
                
    <TextView android:text="TextView" 
        	  android:id="@+id/lbl_incident_title" 
        	  android:layout_below="@+id/url"
        	  style="@style/stitle"/>
        	  
    <TextView android:text="TextView" 
        	  android:id="@+id/lbl_incident_description" 
        	  android:layout_below="@+id/lbl_incident_title"
        	  style="@style/sinput_text_alt"/>
    
    <TextView android:id="@+id/textView4" 
            	  android:layout_below="@+id/lbl_incident_description"    
        	  android:text="@string/incident_view_added_by"
        	  style="@style/stextleft"/>
        	 
           		  
	<TextView android:text="TextView" 
        	  android:id="@+id/lbl_incident_added_by"  
        	  android:layout_below="@+id/lbl_incident_description"    	  
        	  android:layout_toRightOf="@+id/textView4"
        	  android:layout_marginLeft="5sp"
        	  android:autoLink="phone"
        	  style="@style/stext"/>
	                		  
	<TextView android:id="@+id/textView6" 
			  android:layout_below="@+id/lbl_incident_added_by"
        	  android:text="@string/incident_view_incident_age"
        	  style="@style/stextleft"/>
                		  
	<TextView android:text="TextView" 
			  android:layout_toRightOf="@+id/textView6"
        	  android:layout_marginLeft="5sp"
        	  android:layout_below="@+id/lbl_incident_added_by"
        	  android:id="@+id/lbl_incident_age" 
        	  style="@style/stext" /> 

  
    	  
 <!-- Footer -->
	   	
		  <TextView android:id="@+id/warning"
		          	  android:layout_below="@+id/lbl_incident_age"
        	  android:text="@string/warning" 
        	  style="@style/swarning"/> 

   
</RelativeLayout>