<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/about_ui_lbl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
        android:layout_marginLeft="@dimen/ui_elem_margin_left"
        android:layout_marginRight="@dimen/ui_elem_margin_right"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/about_ui_lbl"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/about_ui_lbl_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_elem_margin_left"
        android:layout_marginRight="@dimen/ui_elem_margin_right"
        android:layout_marginBottom="@dimen/ui_elem_margin_bottom" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/about_ui_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_elem_margin_left"
                android:layout_marginRight="@dimen/ui_elem_margin_right"
                android:text="@string/about_ui_txt" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/about_ui_btn_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
            android:layout_marginLeft="@dimen/ui_elem_margin_left"
            android:layout_marginRight="@dimen/ui_elem_margin_right"
            android:layout_weight="1.0"
            android:text="@string/about_ui_btn_stats" />

        <Button
            android:id="@+id/about_ui_btn_licenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
            android:layout_marginLeft="@dimen/ui_elem_margin_left"
            android:layout_marginRight="@dimen/ui_elem_margin_right"
            android:layout_weight="1.0"
            android:text="@string/about_ui_btn_licenses" />
    </LinearLayout>

</LinearLayout>