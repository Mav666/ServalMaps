<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/poi_info_ui_lbl_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
        android:layout_marginLeft="@dimen/ui_elem_margin_left"
        android:layout_marginRight="@dimen/ui_elem_margin_right"
        android:text="@string/poi_info_ui_lbl_heading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

     <TextView
         android:id="@+id/poi_info_ui_lbl_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
         android:layout_marginLeft="@dimen/ui_elem_margin_left"
         android:layout_marginRight="@dimen/ui_elem_margin_right"
         android:text="@string/poi_info_ui_lbl_title"/>

     <TextView
         android:id="@+id/poi_info_ui_txt_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
         android:layout_marginLeft="@dimen/ui_elem_margin_left"
         android:layout_marginRight="@dimen/ui_elem_margin_right"/>
     
     <TextView
         android:id="@+id/poi_info_ui_lbl_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
         android:layout_marginLeft="@dimen/ui_elem_margin_left"
         android:layout_marginRight="@dimen/ui_elem_margin_right"
         android:text="@string/poi_info_ui_lbl_description"/>
     
     <TextView
         android:id="@+id/poi_info_ui_txt_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
         android:layout_marginLeft="@dimen/ui_elem_margin_left"
         android:layout_marginRight="@dimen/ui_elem_margin_right"
         android:minLines="3"/>
     
     <LinearLayout
         android:id="@+id/linearLayout1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
         <TextView
                android:id="@+id/poi_info_ui_lbl_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
                android:layout_marginLeft="@dimen/ui_elem_margin_left"
                android:layout_marginRight="@dimen/ui_elem_margin_right"
                android:text="@string/poi_info_ui_lbl_age" />

            <TextView
                android:id="@+id/poi_info_ui_txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ui_elem_margin_bottom"
                android:layout_marginLeft="@dimen/ui_elem_margin_left"
                android:layout_marginRight="@dimen/ui_elem_margin_right"
                android:text="" />
     </LinearLayout>
    

</LinearLayout>